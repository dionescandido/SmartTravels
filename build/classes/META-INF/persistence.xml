<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="SmartTravels">
		<class>br.com.model.Pessoa</class>
		<class>br.com.model.Usuario</class>
		<class>br.com.model.Veiculo</class>
		<class>br.com.model.Funcionario</class>
		<class>br.com.model.Solicitacao</class>
		<class>br.com.model.Departamento</class>
		<class>br.com.model.Municipio</class>
		<class>br.com.model.Cliente</class>
		<class>br.com.model.Sexo</class>
		<class>br.com.model.Motivo</class>
		<class>br.com.model.TipoDespesas</class>
		<class>br.com.model.Despesas</class>
		<class>br.com.model.Agenda</class>
		<class>br.com.model.Viagem</class>
		<class>br.com.model.Login</class>
		<class>br.com.model.Cartao</class>
		<class>br.com.model.Estorno</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3307/tcc?useSSL=false" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="admin" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="eclipselink.logging.level" value="FINE" />
			<property name="eclipselink.ddl-generation" value="create-tables"/>
		</properties>

	</persistence-unit>
</persistence>
